</script>




<script>
    document.addEventListener("DOMContentLoaded", function () {

        const searchBox = document.getElementById("searchBox");
        const tagFilter = document.getElementById("tagFilter");
        const items = document.querySelectorAll(".search-item");

        function filterItems() {
            const searchValue = searchBox.value.toLowerCase();
            const selectedTag = tagFilter.value.toLowerCase();

            items.forEach(item => {
                const text = item.innerText.toLowerCase();
                const tagText = item.querySelector(".tag-badge").innerText.toLowerCase();

                const matchesSearch = text.includes(searchValue);
                const matchesTag = selectedTag === "all" || tagText === selectedTag;

                item.style.display = (matchesSearch && matchesTag) ? "" : "none";
            });
        }

        searchBox.addEventListener("keyup", filterItems);
        tagFilter.addEventListener("change", filterItems);
    });
</script>

<script>


        function getItemDetails(id) {

        if (!confirm("Are you sure you want to delete this record?")) {
            return; 
        }

        $.ajax({
            url: '/HomeController1/Delete',
            type: 'GET',
            data: { id: id },
            success: function (result) {
                alert(result.message);
                location.reload();
            },
            error: function (err) {
                alert('Error: ' + err.statusText);
            }
        });
    }

</script>



